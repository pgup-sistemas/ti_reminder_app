# TIMEZONE
TIMEZONE=America/Porto_Velho

# JWT
JWT_EXPIRES_HOURS=1

# LOGGING
LOG_TO_STDOUT=True
LOG_LEVEL=WARNING  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE=logs/ti_reminder.log
SECURITY_LOG_FILE=logs/security.log
SQL_ECHO=False

# SCHEDULER
SCHEDULER_API_ENABLED=True

# URL CONFIGURATION (necessário para url_for fora de contexto de requisição)
# SERVER_NAME é usado pelo Flask para construir URLs em tarefas agendadas (scheduler)
# Em desenvolvimento, usar 127.0.0.1 para evitar warnings
SERVER_NAME=127.0.0.1:5000
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

